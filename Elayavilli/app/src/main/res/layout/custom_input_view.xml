<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clipChildren="true"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <com.alwar.elayavalli.CustomViews.AutoFitTextView.AutoFitTextView
        android:id="@+id/hintTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center_vertical"
        android:maxLines="1"
        android:textSize="@dimen/Text_size_normal"
        android:background="@drawable/rectangle_new"
        android:paddingLeft="@dimen/Padding_whole"
        android:paddingRight="@dimen/Padding_whole"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:visibility="visible"
        app:autoSizeMaxTextSize="@dimen/Text_size_main_head"
        app:autoSizeMinTextSize="@dimen/AutoTextViewMinSize"
        app:autoSizeTextType="uniform"
        app:layout_constraintCircleRadius="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <com.alwar.elayavalli.CustomViews.AutoFitTextView.AutoFitTextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/Ending_margin"
        android:layout_marginRight="@dimen/Ending_margin"
        android:gravity="center_horizontal|center_vertical"
        android:maxLines="1"
        android:visibility="gone"
        app:autoSizeMaxTextSize="@dimen/Text_size_main_head"
        app:autoSizeMinTextSize="@dimen/Icon_text_min"
        app:autoSizeTextType="uniform"
        android:background="@android:color/transparent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center_vertical"
        android:id="@+id/editText"
        android:maxLines="1"
        android:inputType="text"
        android:visibility="gone"
        android:textSize="@dimen/Icon_text"
        android:layout_marginLeft="@dimen/Ending_margin"
        android:layout_marginRight="@dimen/Ending_margin"
        android:background="@android:color/transparent"
        android:backgroundTint="@android:color/transparent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
