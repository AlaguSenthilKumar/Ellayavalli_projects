<?xml version="1.0" encoding="utf-8"?>
<com.alwar.elayavalli.CustomViews.HomeRoundedLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    app:hom_background_color="@color/white">

    <ImageView
        android:layout_width="@dimen/Main_option_icon_size"
        android:layout_height="@dimen/Main_option_icon_size"
        android:layout_gravity="center"
        android:id="@+id/iv_home_option"
        android:scaleType="fitCenter"
        android:layout_weight="1"
        android:padding="5dp"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:contentDescription="@string/app_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/textColor"
        android:id="@+id/tv_name"
        android:gravity="center"
        android:textSize="10sp"
        android:textStyle="bold"
        android:layout_gravity="center"/>

</com.alwar.elayavalli.CustomViews.HomeRoundedLayout>