<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/mild_grayColor">


    <com.alwar.elayavalli.CutomViews.CustomEditText
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="10dp"
        app:iconId="@drawable/ic_home_profile_man"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:placeholder="Name" />

    <com.alwar.elayavalli.CustomViews.CustomEditText
        android:id="@+id/tv_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="@dimen/Layout_margin"
        android:layout_marginRight="10dp"
        app:iconId="@drawable/ic_home_profile_man"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_name"
        app:placeholder="Gender" />

    <com.alwar.elayavalli.CustomViews.CustomEditText
        android:id="@+id/tv_dob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="@dimen/Layout_margin"
        android:layout_marginRight="10dp"
        app:iconId="@drawable/ic_home_profile_man"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_gender"
        app:placeholder="Date of birth" />

    <com.alwar.elayavalli.CustomViews.CustomEditText
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="@dimen/Layout_margin"
        android:layout_marginRight="10dp"
        app:iconId="@drawable/ic_home_profile_man"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_dob"
        app:placeholder="Address" />
</android.support.constraint.ConstraintLayout>